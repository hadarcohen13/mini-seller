# Mini Seller Configuration
# Copy this file to .env and update the values as needed

# Application Environment (development, staging, production, test)
MINI_SELLER_ENVIRONMENT=development

# Server Configuration
MINI_SELLER_SERVER_PORT=8080
MINI_SELLER_SERVER_HOST=localhost
MINI_SELLER_SERVER_LOG_LEVEL=info

# Database Configuration
MINI_SELLER_DATABASE_HOST=localhost
MINI_SELLER_DATABASE_PORT=5432
MINI_SELLER_DATABASE_USER=postgres
MINI_SELLER_DATABASE_PASSWORD=your_password_here
MINI_SELLER_DATABASE_NAME=mini_seller
MINI_SELLER_DATABASE_SSL_MODE=disable

# Debug Mode
MINI_SELLER_DEBUG=false