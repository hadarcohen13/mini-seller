# Mini Seller Configuration
# Copy this file to .env and update the values as needed

# Application Environment (development, staging, production, test)
MINI_SELLER_ENVIRONMENT=development

# Server Configuration
MINI_SELLER_SERVER_PORT=8080
MINI_SELLER_SERVER_HOST=localhost
MINI_SELLER_SERVER_LOG_LEVEL=info
MINI_SELLER_SERVER_READ_TIMEOUT_MS=5000
MINI_SELLER_SERVER_WRITE_TIMEOUT_MS=10000
MINI_SELLER_SERVER_SHUTDOWN_TIMEOUT_MS=30000
MINI_SELLER_SERVER_HEALTH_CHECK_TIMEOUT_MS=5000
MINI_SELLER_SERVER_IDLE_CONN_TIMEOUT_MS=90000
MINI_SELLER_SERVER_WORKER_STOP_TIMEOUT_MS=5000

# Redis Configuration
MINI_SELLER_REDIS_HOST=localhost
MINI_SELLER_REDIS_PORT=6379
MINI_SELLER_REDIS_PASSWORD=
MINI_SELLER_REDIS_DB=0

# Logging Configuration
MINI_SELLER_LOGGING_LEVEL=info
MINI_SELLER_LOGGING_FORMAT=json

# Rate Limiting Configuration
MINI_SELLER_RATE_LIMIT_QPS=10.0
MINI_SELLER_RATE_LIMIT_BURST=20

# Debug Mode
MINI_SELLER_DEBUG=false

# Buyers Configuration (Example - Add more as needed)
MINI_SELLER_BUYERS_0_NAME=buyer1
MINI_SELLER_BUYERS_0_ENDPOINT=http://buyer1.example.com/bid
MINI_SELLER_BUYERS_0_QPS=10.0
MINI_SELLER_BUYERS_0_BURST=20
MINI_SELLER_BUYERS_0_TIMEOUT_MS=100

# Additional Buyer (if needed)
# MINI_SELLER_BUYERS_1_NAME=buyer2
# MINI_SELLER_BUYERS_1_ENDPOINT=http://buyer2.example.com/bid
# MINI_SELLER_BUYERS_1_QPS=15.0
